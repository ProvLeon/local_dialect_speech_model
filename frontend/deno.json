{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "nodeModulesDir": "true",
  "tasks": {
    "dev": "deno run --allow-all --node-modules-dir --v8-flags=--max-old-space-size=4096 npm:next dev --turbopack",
    "build": "deno run --allow-all --node-modules-dir --v8-flags=--max-old-space-size=4096 npm:next build",
    "build:memory-optimized": "deno run --allow-all --node-modules-dir --v8-flags=--max-old-space-size=2048,--optimize-for-size npm:next build",
    "start": "deno run --allow-all --node-modules-dir npm:next start",
    "lint": "deno run --allow-all --node-modules-dir npm:eslint .",
    "type-check": "deno run --allow-all --node-modules-dir npm:tsc --noEmit"
  },
  "imports": {
    "react": "npm:react@19.1.0",
    "react-dom": "npm:react-dom@19.1.0",
    "next": "npm:next@15.5.3",
    "lucide-react": "npm:lucide-react@^0.544.0",
    "@types/react": "npm:@types/react@^19",
    "@types/react-dom": "npm:@types/react-dom@^19",
    "@types/node": "npm:@types/node@^20"
  },
  "exclude": [
    ".next/**",
    "node_modules/**",
    "out/**",
    "build/**",
    "dist/**"
  ],
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
